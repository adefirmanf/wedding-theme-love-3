---
export interface Props {
  title: string;
  date: string;
}

const { title, date } = Astro.props;
const months = [
  "January",
  "February",
  "March",
  "April",
  "May",
  "June",
  "July",
  "August",
  "September",
  "October",
  "November",
  "December",
];

const d = new Date(date);
const formatDate = `${d.getFullYear()}/${d.getMonth()}/${d.getDate()} ${d.getHours()}:${d.getMinutes()}:${d.getSeconds()}`;
const monthName = months[d.getMonth()];
---

<section class="wpo-wedding-date">
  <div class="container">
    <h2
      class="wow fadeInUp"
      data-wow-duration="1000ms"
      style="margin-top: 20px;"
    >
      <span class="shape-1"><img src="/images/slider/shape.png" alt="" /></span>
      {title}
      <span class="shape-2"
        ><img src="/images/slider/shape2.png" alt="" />
      </span>
    </h2>
    <p class="wow fadeInUp" data-wow-duration="1200ms">
      We Are Getting Married {monthName}
      {d.getDate()} , {d.getFullYear()}
    </p>
    <div class="row wow fadeInUp" data-wow-duration="1400ms">
      <div class="col col-xs-12">
        <div class="clock-grids">
          <div id="clock-value" style="display: none;">{formatDate}</div>
          <div id="clock"></div>
        </div>
      </div>
    </div>
  </div>
  <!-- end container -->
</section>
